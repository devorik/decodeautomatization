<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    >
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="15dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image_dep_emp_list"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/profile"

                    app:civ_border_color="#FF000000"/>
                <LinearLayout
                    android:paddingLeft="20dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:id="@+id/user_name_dep_emp_list_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Surname Name"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/user_work_percent_dep_emp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="80%"
                        android:textSize="14sp"
                        android:textColor="@color/black"

                        />
                </LinearLayout>
                <ImageButton
                    android:id="@+id/to_profile_btn"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/right"
                    />

            </LinearLayout>
<!--            android:indeterminate="true"-->
<!--            android:indeterminateDrawable="@drawable/pb_background"-->
<!--            android:max="100"-->
<!--            android:backgroundTint="#DDDDDD"-->
<!--            android:secondaryProgress="70"-->
<!--            android:progressTint="@color/purple_700"-->
<!--            android:progress="70"-->
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="70"
                    android:progressDrawable="@drawable/pb_background_green"
                    />
            </LinearLayout>
    </androidx.cardview.widget.CardView>
